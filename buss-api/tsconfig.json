{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "paths": {
      "*": ["src/*", "type/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
    // "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
